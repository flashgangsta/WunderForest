package com.rr.personage {		import flash.display.MovieClip;	import flash.utils.getDefinitionByName;			public class PersonageInstance extends MovieClip {				private var _color:uint = 0;				public function PersonageInstance() {					}				public function getPoseClass( className:String ):Class {			return loaderInfo.applicationDomain.getDefinition( className ) as Class;		}				public function getPoseInstance( className:String ):MovieClip {			var poseClass:Class = loaderInfo.applicationDomain.getDefinition( className ) as Class;			var poseInstance:MovieClip = new poseClass();			return poseInstance		}				public function setColor( value:uint ):void {			_color = value;		}				public function getColor():uint {			return _color;		}			}}
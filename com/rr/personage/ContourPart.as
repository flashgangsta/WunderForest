package  com.rr.personage {	import flash.display.Sprite;	import flash.filters.ColorMatrixFilter;	import fl.motion.AdjustColor;	import flash.geom.ColorTransform;	import flash.display.Shape;	public class ContourPart extends ColorablePart {		public function ContourPart() {			if( root ) setColor();		}				override public function setColor():void {			var colorTrans = new ColorTransform();			var shape:Shape = getChildAt( 0 ) as Shape;			var colorFilter:AdjustColor;			var colorMatrix:ColorMatrixFilter;			var color:uint = getColor();						if ( shape.transform.colorTransform.color === color ) {				return;			}						colorTrans.color = color;			shape.transform.colorTransform = colorTrans;			colorFilter = new AdjustColor();			colorFilter.brightness = -12;			colorFilter.contrast = -50;			colorFilter.saturation = -55;			colorFilter.hue = 11;						colorMatrix = new ColorMatrixFilter( colorFilter.CalculateFinalFlatArray() );			filters = [ colorMatrix ];		}	}	}
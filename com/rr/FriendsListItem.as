package com.rr {		import flash.display.MovieClip;	import flash.events.Event;	import com.rr.utils.BitmapLoader;	import com.flashgangsta.managers.ButtonManager;			public class FriendsListItem extends MovieClip {				private var avatar:MovieClip;		private var _avatarURL:String;						public function FriendsListItem( avatarURL:String ) {			addEventListener( Event.ADDED_TO_STAGE, init );			_avatarURL = avatarURL;			stop();		}				private function init( event:Event ):void {			removeEventListener( Event.ADDED_TO_STAGE, init );			avatar = getChildByName( "avatar_mc" ) as MovieClip;			var avatarLoader:BitmapLoader = new BitmapLoader( _avatarURL, avatar, BitmapLoader.SCALE_FILL, BitmapLoader.ALIGN_CENTER_TOP );			avatarLoader.addEventListener( Event.COMPLETE, onLoaded );		}				private function onLoaded( event:Event ):void {      trace(" FriendsListItem onLoaded");			BitmapLoader( event.currentTarget ).removeEventListener( Event.COMPLETE, onLoaded );			ButtonManager.addButton( this, getChildByName( "hit_mc" ) as MovieClip );		}					}	}